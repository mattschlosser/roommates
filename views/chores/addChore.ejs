<!DOCTYPE html>
<html>
  <head>
    <title>Add a chore - Roommates</title>
    <% include ../partials/headers.ejs %>
  </head>
  <body>
    <div class="container">
    <% include ../partials/nav.ejs %>
    <h1>Add a chore </h1>
      <form method="POST" action="/chores">
        <div class="form-group">
          <label for="name">Chore</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Doing the dishes">
        </div>
        <div class="form-group">
          <label for="name">Person</label>
          <select name="person">
          <% for (var i = 0; i < roommates.length; i++) { %>
              <option value="<%=roommates[i].user%>"><%=roommates[i].firstName %> <%= roommates[i].lastName %></option>
          <% } %>
          </select>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Add Chore</button>
      </form>
    </div>
    <% include ../partials/scripts.ejs %>
  </body>
</html>

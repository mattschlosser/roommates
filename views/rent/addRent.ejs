<!DOCTYPE html>
<html>
  <head>
      <title>Add Utility - Roommates</title>
      <% include ../partials/headers.ejs %>
  </head>
  <body>
    <div class="container">
      <% include ../partials/nav.ejs %>
      <h1>Add a new utility payment </h1>
      <form method="POST" action="/rent">
        <div class="form-group">
          <label for="name">Utility Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Gas">
        </div>
        <div class="form-group">
          <label for="value">Amount</label>
          <input type="text" class="form-control" id="value" name="value" placeholder="27.99">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </form>
    </div>
    <% include ../partials/scripts.ejs %>
  </body>
</html>
